<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20.0" alignment="CENTER" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" stylesheets="@/styles/style.css">
   <!-- Espacement entre les composants -->
   <padding>
      <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
   </padding>
   <children>
      <!-- Label pour le titre -->
      <Label text="Nombre d'habitants" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

      <!-- Champ de texte -->
      <TextField VBox.vgrow="ALWAYS" />

      <!-- Label pour l'arrondi -->
      <Label text="Arrondi" style="-fx-font-size: 14px;" />

      <!-- Slider avec ajustements -->
      <Slider showTickLabels="true" showTickMarks="true" majorTickUnit="10.0" blockIncrement="1.0" VBox.vgrow="ALWAYS" />
   </children>
</VBox>
